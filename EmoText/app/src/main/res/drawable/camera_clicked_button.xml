<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="ring"
            android:innerRadius="30dp"
            android:thickness="5dp"
            android:useLevel="false">

            <size android:width="70dp" android:height="70dp"></size>
            <solid android:color="@color/white"></solid>
        </shape>
    </item>

    <item android:right="7dp" android:top="7dp" android:left="7dp" android:bottom="7dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/darkGrey"></solid>
            <size android:width="40dp" android:height="40dp"></size>
            <corners android:radius="100dp"></corners>
        </shape>
    </item>

</layer-list>