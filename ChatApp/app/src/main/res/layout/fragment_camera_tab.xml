<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.CameraTabFragment"
android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camera_view_layout">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:id="@+id/flash_button"
            app:srcCompat="@drawable/flash_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:tint="@color/grey"
            android:elevation="2dp"/>

        <ImageView
            android:id="@+id/flip_camera_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flip_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            app:tint="@color/grey" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/image_capture_button"
            android:src="@drawable/camera_select_button"
            android:elevation="2dp"
            android:layout_marginBottom="30dp"/>

        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:layout_width="100dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/zoom_bar"
            android:elevation="2dp"
            app:vsb_bar_corner_radius="20dp"
            app:vsb_bar_width="40dp"
            app:vsb_show_thumb="false"
            app:vsb_progress="0"
            android:layout_marginBottom="40dp"
            app:vsb_bar_background="@color/lightGrey"
            app:vsb_bar_progress_gradient_start="@color/darkBlue"
            app:vsb_bar_progress_gradient_end="@color/blue"/>


        <androidx.camera.view.PreviewView
            android:id="@+id/texture_for_camera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.camera.view.PreviewView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/save_image_layout"
        android:visibility="gone"
        android:elevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/captured_image"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/save_button"
            android:src="@drawable/ic_send"
            android:tint="@color/colorAccent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="2dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>