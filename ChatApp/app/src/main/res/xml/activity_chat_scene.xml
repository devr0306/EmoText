<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
                android:id="@+id/user_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                motion:layout_constraintBottom_toTopOf="@id/container_for_typing_components"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/top_panel"/>

        <Constraint
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buffer_layout"
            motion:layout_constraintBottom_toTopOf="@+id/container_for_typing_components"
            android:visibility="gone"
            android:orientation="horizontal"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/user_messages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:clipToPadding="false"
            android:paddingBottom="55dp"
            motion:layout_constraintBottom_toTopOf="@id/buffer_layout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/top_panel"/>

        <Constraint
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buffer_layout"
            motion:layout_constraintBottom_toTopOf="@+id/container_for_typing_components"
            android:visibility="visible"
            android:orientation="horizontal"/>

    </ConstraintSet>
</MotionScene>